# MIREXプロジェクト環境変数設定サンプル
# .env.exampleをコピーして.envファイルを作成し、必要に応じて値を変更してください

# MCPサーバー設定
MCP_SERVER_URL=http://localhost:5002
MCP_POLL_INTERVAL=5
MCP_JOB_TIMEOUT=600
MCP_SESSION_TIMEOUT=3600
MCP_REQUEST_TIMEOUT=60

# 一般設定
MCP_LOG_LEVEL=INFO
MCP_CONFIG_PATH=config.yaml
MCP_MAX_ITERATIONS=5
MCP_IMPROVEMENT_THRESHOLD=0.05
MCP_GRID_SEARCH_ENABLED=true

# データパス設定
MIREX_DATA_DIR=data
MIREX_AUDIO_DIR=data/synthesized/audio
MIREX_LABEL_DIR=data/synthesized/labels
MIREX_OUTPUT_DIR=evaluation_results
MIREX_TEMPLATE_DIR=templates
MIREX_WORKSPACE=.

# Claude設定
CLAUDE_CONFIG_PATH=~/Library/Application Support/Claude/storage/config.json

# APIキー設定（必要な場合）
#ANTHROPIC_API_KEY=
#OPENAI_API_KEY= 